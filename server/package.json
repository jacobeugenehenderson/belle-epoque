{
  "name": "belle-epoque-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API for Belle Epoque - Belleville 3D Map",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "import-buildings": "node scripts/import-buildings.js",
    "enrich-gis": "node scripts/enrich-addresses.js --source=gis",
    "enrich-osm": "node scripts/enrich-addresses.js --source=osm",
    "db:reset": "rm -f belle-epoque.db && npm run import-buildings"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^2.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
